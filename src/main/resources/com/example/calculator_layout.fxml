<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.functioncalculator.controllers.CalculatorController"
      spacing="10" fillWidth="true">

    <!-- PDF Viewer Area (75% height) -->
    <Pane fx:id="pdfPane" VBox.vgrow="ALWAYS" />

    <!-- Keyboard (25% height) -->
    <GridPane fx:id="keyboardPane" prefHeight="200" maxHeight="200">
        <Button text="sin" onAction="#onFunctionClick"/>
        <Button text="cos" onAction="#onFunctionClick"/>
        <Button text="tan" onAction="#onFunctionClick"/>
        <Button text="log" onAction="#onFunctionClick"/>
        <Button text="âˆš" onAction="#onFunctionClick"/>
        <!-- Add more buttons as needed -->
    </GridPane>

</VBox>
